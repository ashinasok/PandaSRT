{
  "name": "pandasrt",
  "version": "1.0.0",
  "description": "Offline Subtitle Generator",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.pandasrt.app",
    "productName": "PandaSRT",
    "files": [
      "**/*",
      "!dist/*"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources"
      }
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    }
  }
}
